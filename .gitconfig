[user]
	name = akaimo
	email = mail@akaimo.com
[core]
	editor = vim
	excludesfile = ~/.gitignore
[alias]
  a = add --all
  co = checkout
  cm = commit
  p = !git push -u origin `git rev-parse --abbrev-ref HEAD`
  f = fetch -p
  st = status -sb
  tags = tag -l
  br = branch -a
  remotes = remote -v
  d = diff
  delete-merged-branch = "!f() { git branch --merged|egrep -v '\\*|develop|master' | xargs git branch -d; };f"
  history = "!f() { file=$(rg --files --hidden . | fzf --preview 'cat {}'); if [ -n \"${file}\" ]; then git log -p ${file}; fi;  };f"
	dt = difftool -y -t difftastic
  aicm = "!f() { COMMITMSG=$(git diff --cached | claude -p '上記差分に基づき、変更内容とその理由を要約した日本語のGitコミットメッセージを1行のみ生成してください。説明文や本文を追加しないでください。不要な空白を入れないでください。コミットサマリー行のみを出力してください。'); git commit -m \"$COMMITMSG\" -e; }; f"
[color]
	ui = 1
	status = always
[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less
	difftool = true
[interactive]
	diffFilter = diff-highlight
[diff]
	compactionHeuristic = true
	tool = difftastic
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	rebase = false
[commit]
	gpgsign = true
[tag]
	gpgsign = true
[difftool "difftastic"]
	cmd = difft \"$LOCAL\" \"$REMOTE\"
